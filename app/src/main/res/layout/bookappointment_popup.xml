<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bookAppointmentPopup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="16dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Select Date -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Date"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:background="@drawable/edittext_background"
            android:padding="12dp">

            <EditText
                android:id="@+id/etDate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="DD/MM/YYYY"
                android:textSize="14sp"
                android:background="@null"
                android:focusable="false"
                android:padding="8dp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_my_calendar"
                app:tint="@color/gray" />
        </LinearLayout>

        <!-- Select Time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Select Time"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <GridLayout
            android:id="@+id/gridLayoutTimeSlots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:layout_marginTop="16dp"
            android:rowCount="3"
            >

            <!-- Time Slot Buttons -->
            <Button
                android:id="@+id/btn10am"
                style="@style/TimeSlotButton"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:text="10:00am" />

            <Button
                android:id="@+id/btn11am"
                style="@style/TimeSlotButton"
                android:layout_marginRight="6dp"
                android:text="11:00am" />

            <Button
                android:id="@+id/btn12pm"
                style="@style/TimeSlotButton"
                android:text="12:00pm"/>

            <Button
                android:id="@+id/btn1pm"
                style="@style/TimeSlotButton"
                android:layout_marginBottom="6dp"
                android:text="01:00pm" />

            <Button
                android:id="@+id/btn2pm"
                style="@style/TimeSlotButton"
                android:text="02:00pm"/>

            <Button
                android:id="@+id/btn3pm"
                style="@style/TimeSlotButton"
                android:text="03:00pm"/>

            <Button
                android:id="@+id/btn4pm"
                style="@style/TimeSlotButton"
                android:text="04:00pm"/>

            <Button
                android:id="@+id/btn5pm"
                style="@style/TimeSlotButton"
                android:text="05:00pm"/>

            <Button
                android:id="@+id/btn6pm"
                style="@style/TimeSlotButton"
                android:text="06:00pm"/>
        </GridLayout>

        <!-- Book Appointment Button -->
        <Button
            android:id="@+id/btnBookAppointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/dark_blue"
            android:text="Book Appointment"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
