<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Select Time -->

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Select Date"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/editbox_background"
        android:drawableEnd="@android:drawable/ic_menu_my_calendar"
        android:focusable="false"
        android:hint="DD/MM/YYYY"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <!-- Book Appointment Button -->

    <TextView
        android:id="@+id/textView11"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Select Time"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDate" />

    <GridLayout
        android:id="@+id/gridLayoutTimeSlots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:columnCount="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11">

        <!-- Time Slot Buttons -->
        <Button
            android:id="@+id/btn10am"
            android:background="@drawable/blueborder"
            android:text="10:00am" />

        <Button
            android:id="@+id/btn11am"
            android:text="11:00am" />

        <Button
            android:id="@+id/btn12pm"
            android:text="12:00pm" />

        <Button
            android:id="@+id/btn1pm"
            android:text="01:00pm" />

        <Button
            android:id="@+id/btn2pm"
            android:text="02:00pm" />

        <Button
            android:id="@+id/btn3pm"
            android:text="03:00pm" />

        <Button
            android:id="@+id/btn4pm"
            android:text="04:00pm" />

        <Button
            android:id="@+id/btn5pm"
            android:text="05:00pm" />

        <Button
            android:id="@+id/btn6pm"
            android:text="06:00pm" />
    </GridLayout>

    <Button
        android:id="@+id/btnBookAppointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="155dp"
        android:background="@drawable/blueborder"
        android:onClick="goToBookAppointment"
        android:text="Book Appointment"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayoutTimeSlots"
        app:layout_constraintVertical_bias="0.083"
        app:layout_goneMarginTop="40dp" />


</androidx.constraintlayout.widget.ConstraintLayout>